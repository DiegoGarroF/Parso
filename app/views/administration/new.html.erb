
<div class="form-group row">
	<%= form_for :administration, :url => { :action => :create } do |f| %>
		
		<div class="col-md-6 col-md-offset-3">
		    <h3 for="correo" style="text-align: center;" >Registrar Nuevo Correo</h3>
			<div class="input-group">
				<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
				<%= f.text_field :correo, placeholder:"Email", id:"email", class:"form-control"%>  
			</div>
			<% @items.errors.full_messages.each do |message| %>
				<br>
			<div class="alert alert-danger alert-dismissable fade in">
    			<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
   				<strong>Error!</strong> <%= message%>
			</div>
			<% end %>
		</div>
		<div class="col-md-1"> 
		 	<%= f.submit "Agregar", class:"btn btn-info" %>
		</div>
    <%end%>
</div>


















